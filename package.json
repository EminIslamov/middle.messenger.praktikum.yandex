{
  "name": "middle.messenger.praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "tsc && vite build && vite",
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "mocha",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:ts:fix": "eslint '**/*.{js,ts}' --fix",
    "lint:css": "stylelint '**/*.scss' --fix",
    "format": "prettier --write '**/*.{js,ts,scss,json,md}'",
    "prepare": "husky"
  },
  "engines": {
    "node": "20.10.0"
  },
  "devDependencies": {
    "@eslint/js": "9.20.0",
    "@types/chai": "5.2.2",
    "@types/mocha": "10.0.10",
    "@types/sinon": "17.0.4",
    "@typescript-eslint/eslint-plugin": "8.24.0",
    "@typescript-eslint/parser": "8.24.0",
    "chai": "5.2.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.3",
    "globals": "15.14.0",
    "handlebars": "4.7.8",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.2",
    "mocha": "11.7.1",
    "prettier": "3.5.1",
    "sass": "1.80.6",
    "sinon": "21.0.0",
    "stylelint": "16.14.1",
    "stylelint-config-standard-scss": "14.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.6.2",
    "typescript-eslint": "8.24.0",
    "vite": "5.4.10",
    "vite-plugin-handlebars": "2.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{scss,css}": [
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
